{
  "name": "node-primeira-api",
  "version": "1.0.0",
  "description": "Desafio API NodeJS, um desafio para principiantes que reúne boas práticas de desenvolvimento de APIs",
  "license": "MIT",
  "author": "Juan Vieira Prado",
  "type": "module",
  "main": "server.ts",
  "packageManager": "pnpm@10.4.1",
  "keywords": [],
  "scripts": {
    "dev": "node --env-file .env --experimental-strip-types --no-warnings --watch src/server.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node --env-file .env --experimental-strip-types ./src/database/seed.ts",
    "pretest": "dotenv -e .env.test drizzle-kit migrate",
    "test": "dotenv -e .env.test vitest run --coverage"
  },
  "dependencies": {
    "@fastify/swagger": "^9.5.1",
    "drizzle-orm": "^0.44.4",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "^5.0.3",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@scalar/fastify-api-reference": "^1.34.2",
    "@types/node": "^24.2.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
